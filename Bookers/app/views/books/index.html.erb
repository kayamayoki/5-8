<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book) %></td>
      <td><%= link_to "Edit", edit_book_path(book) %></td>
      <td><%= link_to "Destroy", book, method: :delete, data: { confirm: "Are you sure?" }  %></td>
    </tr>
  <% end %>
  </thead>
</table>

<h2>New book</h2>

<%= form_for(@book) do |f| %>
		 <% if @book.errors.any? %>
		 	<h4 class="error-title">!入力した内容にエラーが<%= @book.errors.count %>件あります!</h4>
		 	<ul>
				<% @book.errors.full_messages.each do |message|%>
				 		<li class="error-info"><%= message %></li>
				<% end %>
		 	</ul>
	<% end %>

<h4>title</h4>
<%= f.text_field :title %>
<h4>body</h4>
<%= f.text_area :body %>
<%= f.submit "Create Book" %>
<% end %>
